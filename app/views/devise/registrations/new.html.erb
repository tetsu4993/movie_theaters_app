<%#= render "shared/second-header"%>

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      会員情報入力
    </h1>
  </div>

  <%# インスタンスを渡して、エラー発生時にメッセージが表示されるようにしましょう。%>
  <%# render 'shared/error_messages', model: f.object %>
  <%# //インスタンスを渡して、エラー発生時にメッセージが表示されるようにしましょう。%>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label :nickname, class="form-text">ニックネーム</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"例) 映画大好きマン", maxlength:"40" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label :email, class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label :password, class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label :password_confirmation, class="form-text">パスワード(確認)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label :favoriteactor, class="form-text">お気に入りの俳優</label>
      <span class="indispensable2">任意</span>
    </div>
    <%= f.text_area :favoriteactor, class:"input-default", id:"favoriteactor", placeholder:"例) クリス・プラット", maxlength:"20" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label :favoritemovie, class="form-text">お気に入りの映画</label>
      <span class="indispensable2">任意</span>
    </div>
    <%= f.text_area :favoritemovie, class:"input-default", id:"favoritemovie", placeholder:"例) サマーウォーズ", maxlength:"20" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label :favoritemovie, class="form-text">映画鑑賞スタイル</label>
      <span class="indispensable2">任意</span>
    </div>
    <%= f.collection_select(:moviesee_id, Moviesee.all, :id, :name, {}, {class:"select-box", id:"moviesee"}) %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label :favoritemovie, class="form-text">パンフレット絶対買う？</label>
      <span class="indispensable2">任意</span>
    </div>
    <%= f.collection_select(:pamphlet_id, Pamphlet.all, :id, :name, {}, {class:"select-box", id:"pamphlet"}) %>
  </div>


  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">生年月日</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-birth-wrap'>
      <%= raw sprintf(
                  f.date_select(
                    :birthday,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1960,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>
  </div>
  <div class='register-btn'>
    <%= f.submit "会員登録" ,class:"register-red-btn" %>
    <%=link_to 'もどる', root_path, class:"back-btn2" %>
  </div>
  <%#=link_to 'もどる', root_path, class:"back-btn2" %>
  <p class='register-info'>本人情報の登録について</p>
</div>
<% end %>

<%#= render "shared/second-footer"%>