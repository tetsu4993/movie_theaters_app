<%= render "shared/header" %>

<div class="item-show">
  <div class="item-box">
    <h2 class="name">
      <%= @theater.name %>
    </h2>
    <div class='item-img-content'>
      <%= image_tag @theater.image, class:'item-box-img'%>
    </div>

    <% if user_signed_in? %>
      <%= link_to '映画館の編集',edit_theater_path(@theater.id), method: :get, class:"item-red-btn3" %>
      <p class='or-text'>or</p>
      <%= link_to '削除', theater_path(@theater.id), method: :delete, class:'item-destroy3' %>
    <% end %>


    <div class="item-explain-box">
      <span><%= @theater.name %></span>
    </div>
    <table class="detail-table">
      <tbody>
        <tr>
          <th class="detail-item">都道府県</th>
          <td class="detail-value"><%= @theater.prefecture.name %></td>
        </tr>
        <tr>
          <th class="detail-item">市町村</th>
          <td class="detail-value"><%= @theater.city %></td>
        </tr>
                <tr>
          <th class="detail-item">市町村</th>
          <td class="detail-value"><%= @theater.access %></td>
        </tr>
        <tr>
          <th class="detail-item">配給会社</th>
          <td class="detail-value"><%= @theater.company.name %></td>
        </tr>
        <tr>
          <th class="detail-item">駐車場の有無</th>
          <td class="detail-value"><%= @theater.parking.name %></td>
        </tr>
        <tr>
          <th class="detail-item">喫煙所の有無</th>
          <td class="detail-value"><%= @theater.smorkingroom.name %></td>
        </tr>
        <tr>
          <th class="detail-item">ベビールームの有無</th>
          <td class="detail-value"><%= @theater.babyroom.name %></td>
        </tr>
        <tr>
          <th class="detail-item">備考</th>
          <td class="detail-value"><%= @theater.remark %></td>
        </tr>
      </tbody>
    </table>
    <div class="option">
      <div class="favorite-btn">
        <%= image_tag "star.png" ,class:"favorite-star-icon" ,width:"20",height:"20"%>
        <span>お気に入り 0</span>
      </div>
    </div>
  </div>
  
  <div class="comment-box">
    <form>
      <textarea class="comment-text"></textarea>
      <button type="submit" class="comment-btn">
        <%= image_tag "comment.png" ,class:"comment-flag-icon" ,width:"20",height:"25"%>
        <span>comment!<span>
      </button>
    </form>
  </div>
  <div class="links">
  </div>
</div>

<%#= render "shared/footer" %>